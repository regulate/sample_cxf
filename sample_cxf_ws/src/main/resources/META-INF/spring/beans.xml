<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:osgi="http://www.springframework.org/schema/osgi"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd http://www.springframework.org/schema/osgi
        http://www.springframework.org/schema/osgi/spring-osgi.xsd">

    <import resource="classpath:META-INF/cxf/cxf.xml"/>

    <jaxws:endpoint
            id="helloWorld"
            implementor="cxf.sample.HelloWorldImpl"
            address="/HelloWorld"/>

    <osgi:service id="hw_cxf_ws" interface="cxf.sample.api.HelloWorld">
        <bean class="cxf.sample.HelloWorldImpl"/>
    </osgi:service>

</beans>
