<features xmlns="http://karaf.apache.org/xmlns/features/v1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.0.0 http://karaf.apache.org/xmlns/features/v1.0.0"
          name="sample_cxf">

    <repository>mvn:org.apache.cxf.karaf/apache-cxf/3.0.5/xml/features</repository>
    <repository>mvn:org.ops4j.pax.jdbc/pax-jdbc-features/LATEST/xml/features</repository>

    <feature name="sample-cxf-ws-client" version="${pom.version}">
        <details>CXF Sample WS Client</details>
        <feature>sample-cxf-ws</feature>
        <bundle start-level="90" start="true">mvn:cxf.sample/sample_cxf_ws_client/${pom.version}</bundle>
    </feature>

    <feature name="sample-cxf-ws" version="${pom.version}">
        <details>CXF Sample WS</details>
        <feature>cxf-http</feature>
        <feature>cxf-jaxws</feature>
        <feature>spring-dm</feature>
        <bundle start-level="80">mvn:cxf.sample/sample_cxf_ws_api/${pom.version}</bundle>
        <bundle start-level="85">mvn:cxf.sample/sample_cxf_ws/${pom.version}</bundle>
    </feature>

    <feature name="sample-cxf-rs" version="${pom.version}">
        <details>CXF Sample Person RS</details>
        <feature>cxf-http</feature>
        <feature>cxf-http-jetty</feature>
        <feature>cxf-jaxrs</feature>
        <feature version="3.2.14.RELEASE_1">spring-tx</feature>
        <feature>sample-person-persistence</feature>
        <bundle>mvn:cxf.sample/sample_cxf_person_rs/${pom.version}</bundle>
    </feature>

    <feature name="sample-person-persistence" version="${pom.version}">
        <details>JOOQ Person Persistence Module</details>
        <feature version="3.2.14.RELEASE_1">spring-jdbc</feature>
        <feature>spring-dm</feature>
        <feature>pax-jdbc</feature>
        <feature>pax-jdbc-config</feature>
        <feature>jdbc</feature>
        <feature>pax-jdbc-mysql</feature>
        <bundle>mvn:org.jooq/jooq/3.6.4</bundle>
        <bundle>mvn:cxf.sample/sample_person_persistence/${pom.version}</bundle>
    </feature>

    <feature name="sample-cxf-all" version="${pom.version}">
        <feature>sample-cxf-ws-client</feature>
        <feature>sample-cxf-rs</feature>
    </feature>

</features>