<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xmlns:cxf="http://cxf.apache.org/core"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://cxf.apache.org/jaxws
       http://cxf.apache.org/schemas/jaxws.xsd
       http://cxf.apache.org/core
       http://cxf.apache.org/schemas/core.xsd">

    <cxf:bus>
    </cxf:bus>

    <jaxws:client id="helloServiceClient"
                  serviceClass="cxf.sample.api.HelloService"
                  address="http://localhost:8181/cxf/hello"/>

    <bean id="clientTester" class="cxf.sample.client.ClientTester" init-method="sayHiFromServer">
        <property name="service" ref="helloServiceClient"/>
    </bean>

</beans>
